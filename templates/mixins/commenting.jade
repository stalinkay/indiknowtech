mixin comment-form(action)
	hr
	h4 Please feel free to post and comment below...
	form(method='post', style="margin-bottom: 40px; margin-top: 40px;")
		input(type='hidden', name='action', value='comment.create')
		.media
			.pull-left
				img(src='/images/avatar.png', width=80, height=80).img-rounded
				
			.media-body
				textarea(name='usrName', required, placeholder='Name...', style="margin-bottom: 10px; height: 35px;").form-control
				textarea(name='content', required, placeholder='Leave a comment...', style="margin-bottom: 10px; min-height: 80px; resize: vertical;").form-control
				button(type='submit').btn.btn-primary Post Comment
					
mixin comment-post(comment)
	div(id='comment-id-' + comment.id, style="margin-top: 20px;")
		.media
			hr
			.pull-left
				img(src='/images/avatar.png', width=80, height=80).img-rounded
			.media-body
				.header
					h4 Posted by
						| #{comment.usrName}
					h6.text-muted On
						|#{comment.publishedOn}
				br
				p(style='font-size: 14px;')!= comment.content
 
mixin comment-thread(comments)
	if comments && comments.length
		for comment in comments
			+comment-post(comment)
