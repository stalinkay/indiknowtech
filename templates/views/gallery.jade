extends ../layouts/default

block intro
	.container
		h1 Gallery
	
block content
	.container
		.col-md-2
		.col-md-8
			if galleries.length
				each gallery in galleries
					h2= gallery.name
						if gallery.publishedDate
							.pull-right.text-muted= gallery._.publishedDate.format('Do MMM YYYY')
							
					.container: .row
						.col-md-8.jumbotron.gallery.cf
							each image in gallery.images
									div
										img(src=image.limit(1080,1080)).img-rounded
			else
				h3.text-muted There are no image galleries yet.
